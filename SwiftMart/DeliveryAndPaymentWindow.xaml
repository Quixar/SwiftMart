<Window x:Class="SwiftMart.DeliveryAndPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwiftMart"
        mc:Ignorable="d"
        Title="DeliveryAndPaymentWindow" Height="1080" Width="1920">
    <Grid>

        <!-- Верхний красный бар -->
        <Grid Background="#EA6767" Height="100" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition />
                <ColumnDefinition Width="225" />
                <ColumnDefinition Width="321" />
            </Grid.ColumnDefinitions>

            <!-- Логотип -->
            <Image Grid.Column="0" Margin="94,20,20,20" 
                Source="/Resources/logo.png" Stretch="Fill" />

            <!-- Поиск -->
            <Border CornerRadius="10" BorderBrush="Black" BorderThickness="2" 
                 Background="LightGray" Padding="2" Grid.Column="1" Margin="20,35">
                <TextBox Background="Transparent" BorderThickness="0" 
                      VerticalAlignment="Center" Text="Search" 
                      FontFamily="Arial" Margin="6" />
            </Border>

            <!-- Иконка пользователя -->
            <Button BorderThickness="0" Grid.Column="3" Height="56" Background="#EA6767" VerticalAlignment="Center" Margin="220,0,50,0">
                <Image Source="/Resources/user_icon.png" Stretch="Fill" />
            </Button>

            <!-- Иконка корзины -->
            <Button BorderThickness="0" Grid.Column="3" Height="56" Background="#EA6767" VerticalAlignment="Center" Margin="85,0,185,0">
                <Image Source="/Resources/cart_icon.png" Stretch="Fill" />
            </Button>
        </Grid>

        <!-- Категории и основное содержимое -->
        <Grid Margin="0,100,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Grid Background="#D40000">
                <Menu HorizontalAlignment="Left" VerticalAlignment="Center" 
                   Margin="20,0,0,0" FontSize="16" Background="#D40000">
                    <Menu.Resources>
                        <Style TargetType="MenuItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="MenuItem">
                                        <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1"
                                             Padding="5">
                                            <DockPanel>
                                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center" />
                                                <Popup Placement="Right" IsOpen="{TemplateBinding IsSubmenuOpen}">
                                                    <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1"
                                                         Padding="5" Margin="-1,0,0,0">
                                                        <ItemsPresenter />
                                                    </Border>
                                                </Popup>
                                            </DockPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Menu.Resources>
                </Menu>
            </Grid>

            <!-- Основное содержимое страницы -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="616,20,616,20">
                <StackPanel>
                    <!-- Заголовок -->
                    <TextBlock Text="Delivery and Payment"
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="Black"
                            Margin="0,0,0,20" />

                    <!-- Раздел: Доставка -->
                    <TextBlock Text="Delivery Information"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="DarkSlateGray"
                            Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                        SwiftMart ensures fast and reliable delivery services. Orders within the city are delivered the same day, while regional deliveries are completed the next day. Choose between home delivery or pick-up points conveniently located across the city.
                    </TextBlock>

                    <!-- Раздел: Оплата -->
                    <TextBlock Text="Payment Options"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="DarkSlateGray"
                            Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                        We offer multiple payment methods to suit your needs:
                        - Credit/Debit Cards (Visa, MasterCard, etc.)
                        - Digital Wallets (PayPal, Apple Pay, Google Pay)
                        - Cash on Delivery
                        - Bank Transfers
                        - Installment Plans
                    </TextBlock>

                    <!-- Раздел: Возвраты -->
                    <TextBlock Text="Returns and Exchanges"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="DarkSlateGray"
                            Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                        SwiftMart offers a hassle-free return and exchange policy. Products can be returned or exchanged within 30 days of purchase, provided they are in their original condition. For more details, please contact our support team.
                    </TextBlock>

                    <!-- Раздел: Часто задаваемые вопросы -->
                    <TextBlock Text="Frequently Asked Questions (FAQ)"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="DarkSlateGray"
                            Margin="0,0,0,10" />
                    <TextBlock TextWrapping="Wrap">
                        For additional information, visit our FAQ section or contact customer support.
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
