<Window x:Class="SwiftMart.UserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwiftMart"
        mc:Ignorable="d"
        Title="SwiftMart" Height="1080" Width="1920"
        WindowState="Maximized">

    <!-- Основной Grid -->
    <Grid>
        <!-- Верхний красный бар -->
        <Grid Background="#EA6767" Height="100" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <!-- Логотип -->
            <Image Grid.Column="0" Height="65" Margin="28,18,1518,18" Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\photo_2024-12-14_14-58-16-removebg-preview.png" Stretch="Fill" Grid.ColumnSpan="2"/>

            <!-- Поиск -->
            <Border Width="620" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Background="LightGray" Padding="2" Grid.Column="1" Margin="264,36,508,34">
                <Grid>
                    <!-- Иконка поиска -->
                    <Button BorderThickness="0" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" Height="30" Padding="5,0,0,0">
                        <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\751463-removebg-preview.png" Stretch="Fill" />
                    </Button>

                    <!-- Строка поиска -->
                    <TextBox Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Text="Search" Margin="50,0,14,0" />
                </Grid>
            </Border>

            <!-- Кнопка корзины -->
            <Button BorderThickness="0" Grid.Column="2" VerticalAlignment="Center" Width="40" Height="40"
                    Background="#EA6767" FocusVisualStyle="{x:Null}" IsTabStop="False">
                <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\1490129319-rounded09_82169.png"
                       Stretch="Fill" RenderTransformOrigin="-15.395,-3.553" />
            </Button>

            <!-- Иконка пользователя -->
            <Button BorderThickness="0" Grid.Column="3" Width="40" Height="40" Background="#EA6767"
                    VerticalAlignment="Center">
                <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\round-account-button-with-user-inside_icon-icons.com_72596.png"
                       Stretch="Fill" />
            </Button>
        </Grid>

        <!-- Основной контент с левым меню -->
        <DockPanel Margin="0,200,0,0">
            <!-- Левое меню -->
            <StackPanel DockPanel.Dock="Left" Background="#F4F4F4" Width="250">
                <Button Content="Review" Margin="10,5" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Orders" Margin="10,5" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Payment" Margin="10,5" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Customization" Margin="10,5" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Shipping address" Margin="10,5" Height="40">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid Background="White" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>
        </DockPanel>


        <!-- Категории и основное содержимое -->
        <Grid Margin="0,100,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Background="#D40000">
                <!-- Верхняя панель -->
                <Menu HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16">
                    <Menu.Resources>
                        <!-- Стиль для закругленных элементов меню -->
                        <Style TargetType="MenuItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="MenuItem">
                                        <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1"
                                    Padding="5" SnapsToDevicePixels="True">
                                            <DockPanel>
                                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center" />
                                                <Popup Placement="Right" IsOpen="{TemplateBinding IsSubmenuOpen}">
                                                    <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1"
                                                Padding="5" SnapsToDevicePixels="True">
                                                        <ItemsPresenter />
                                                    </Border>
                                                </Popup>
                                            </DockPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Menu.Resources>

                    <!-- Основные категории -->
                    <MenuItem Header="All Categories" Width="205">
                        <!-- Вложенные пункты меню -->
                        <MenuItem Header="Laptops and Computers">
                            <MenuItem Header="Laptops">
                                <MenuItem Header="Asus" />
                                <MenuItem Header="Lenovo" />
                                <MenuItem Header="Acer" />
                            </MenuItem>
                            <MenuItem Header="Components">
                                <MenuItem Header="Videocards" />
                                <MenuItem Header="Hard Drives" />
                                <MenuItem Header="RAM" />
                            </MenuItem>
                            <MenuItem Header="Monitors" />
                        </MenuItem>
                        <MenuItem Header="Phones, TV, Electronics">
                            <MenuItem Header="Smartphones" />
                            <MenuItem Header="TVs" />
                        </MenuItem>
                        <MenuItem Header="Gaming Products">
                            <MenuItem Header="Consoles" />
                            <MenuItem Header="Gaming Accessories" />
                        </MenuItem>
                        <MenuItem Header="Household Appliances">
                            <MenuItem Header="Refrigerators" />
                            <MenuItem Header="Microwaves" />
                        </MenuItem>
                    </MenuItem>
                </Menu>

                <!-- Дополнительный пример для всплывающего окна -->
                <Popup IsOpen="False" Placement="MousePoint">
                    <Grid Background="White" Width="400" Height="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Первая колонка -->
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="Categories" FontWeight="Bold" />
                            <TextBlock Text="Laptops and Computers" />
                            <TextBlock Text="Phones, TV, Electronics" />
                            <TextBlock Text="Gaming Products" />
                        </StackPanel>
                        <!-- Вторая колонка -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Subcategories" FontWeight="Bold" />
                            <TextBlock Text="Laptops: Asus, Lenovo, Acer" />
                            <TextBlock Text="Components: RAM, SSD" />
                        </StackPanel>
                    </Grid>
                </Popup>
            </Grid>

            <!-- Основной блок -->
            <Grid Margin="340,40,240,40" Background="White" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="260" />
                </Grid.RowDefinitions>

                <!-- Блок информации о пользователе --><!--
                <Border Grid.Row="0" Margin="32" CornerRadius="10" BorderBrush="Black" BorderThickness="1">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="20" FontWeight="Bold" Text="Name User" />
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Favorites" Margin="0,0,10,0" Foreground="Blue" />
                            <TextBlock Text="Subscriptions" Margin="10,0,10,0" Foreground="Blue" />
                            <TextBlock Text="Viewed" Foreground="Blue" />
                        </StackPanel>
                        <TextBlock Text="My Orders" Margin="0,10,0,0" FontWeight="Bold" />
                        <WrapPanel>
                            <TextBlock Text="Need to pay" Margin="10" />
                            <TextBlock Text="Ready for shipment" Margin="10" />
                            <TextBlock Text="En route" Margin="10" />
                            <TextBlock Text="Arrived" Margin="10" />
                            <TextBlock Text="View all orders" Margin="10" Foreground="Blue" />
                        </WrapPanel>
                    </StackPanel>
                </Border>

                --><!-- Контактная информация --><!--
                <Border Grid.Row="1" Background="LightGray" CornerRadius="10" Margin="10">
                    <TextBlock Text="Contact Information" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" />
                </Border>-->
                
                
                
                <!-- User Section -->
                <Border Grid.Row="0" CornerRadius="32" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- User Icon and Name -->
                            <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\round-account-button-with-user-inside_icon-icons.com_72596.png" Width="55" Height="55" Margin="0,0,10,0" />
                            <StackPanel>
                                <TextBlock Text="Name User" FontWeight="Bold" FontSize="20" Margin="0,0,0,5"/>
                                <!-- User Info (Favorites, Subscriptions, etc.) -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Favorites" />
                                    <TextBlock Text=" | " Margin="5,0" />
                                    <TextBlock Text="Subscriptions" />
                                    <TextBlock Text=" | " Margin="5,0" />
                                    <TextBlock Text="Viewed" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Orders Section -->
                <Border Grid.Row="1" CornerRadius="32" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="My Orders" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
                            <!-- Need to Pay -->
                            <Button Width="100" Height="100" Margin="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\icons8-бумажник-64.png" Width="40" Height="40" />
                                    <TextBlock Text="Need to Pay" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                            </Button>

                            <!-- Ready for Shipment -->
                            <Button Width="100" Height="100" Margin="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\icons8-тележка-50.png" Width="40" Height="40" />
                                    <TextBlock Text="Ready for Shipment" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                            </Button>

                            <!-- En Route -->
                            <Button Width="100" Height="100" Margin="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\icons8-заказ-в-пути-50.png" Width="40" Height="40" />
                                    <TextBlock Text="En Route" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                            </Button>

                            <!-- Arrived -->
                            <Button Width="100" Height="100" Margin="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\icons8-данные-доставлены-50 (1).png" Width="40" Height="40" />
                                    <TextBlock Text="Arrived" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                            </Button>

                            <!-- View All -->
                            <Button Width="100" Height="100" Margin="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="D:\Ресурсы для Swift Mart\Ресурсы для Swift Mart\icons8-логистика-64.png" Width="40" Height="40" />
                                    <TextBlock Text="View All" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
