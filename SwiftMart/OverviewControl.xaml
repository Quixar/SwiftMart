<UserControl x:Class="SwiftMart.OverviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwiftMart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="0,40,10,40" Background="White" Grid.Row="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="260" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="32" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
        <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\round-account-button-with-user-inside_icon-icons.com_72596.png" Width="55" Height="55" Margin="0,0,10,0" />
                <StackPanel>
                        <TextBlock x:Name="UserSessionName" FontWeight="Bold" FontSize="20" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Favorites" />
                        <TextBlock Text=" | " Margin="5,0" />
                            <TextBlock Text="Subscriptions" />
                            <TextBlock Text=" | " Margin="5,0" />
                        <TextBlock Text="Viewed" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>

        <Border Grid.Row="1" CornerRadius="32" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock Text="My Orders" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
                    <Button Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\wallet_icon-icons.com_64826.png" Width="40" Height="40" />
                            <TextBlock Text="Need to Pay" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </Button>
                    <Button Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\trolley5_122333.png" Width="40" Height="40" />
                            <TextBlock Text="Ready for Shipment" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </Button>
                    <Button Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\3615733-delivery-domestic-ems-express-global-logistics-package-shipping_107913.png" Width="40" Height="40" />
                            <TextBlock Text="En Route" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </Button>
                    <Button Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\package3_122406.png" Width="40" Height="40" />
                            <TextBlock Text="Arrived" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </Button>
                    <Button Width="100" Height="100" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\commerce_online_buy_store_business_box_product_item_icon_219867.png" Width="40" Height="40" />
                            <TextBlock Text="View All" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
