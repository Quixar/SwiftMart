<UserControl x:Class="SwiftMart.PaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwiftMart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Верхняя панель -->
        

        <!-- Левая панель -->
       

        <!-- Основной контент -->
        <StackPanel Margin="150,50,0,50">
            <!-- Заголовок -->
            <TextBlock Text="Cards" FontSize="20" FontWeight="Bold" Margin="10" />

            <!-- Список карт -->
            <WrapPanel Margin="10" HorizontalAlignment="Left">
                <!-- Карта -->
                <Border Width="200" Height="100" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                    <StackPanel>
                        <TextBlock Text="**** 1234" FontWeight="Bold" FontSize="14" Margin="10" />
                        <TextBlock Text="VISA" FontSize="12" Foreground="Gray" Margin="10,0,0,0" />
                    </StackPanel>
                </Border>

                <!-- Кнопка добавления новой карты -->
                <Border Width="200" Height="100" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                    <Button Content="+ Add new Card" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="Black" Click="Button_Click" />
                </Border>
            </WrapPanel>

            <!-- Диалог добавления новой карты -->
            <Border Visibility="Collapsed" Name="AddCardDialog" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Add new card" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                    <Button Content="X" Background="Transparent" Foreground="Black" HorizontalAlignment="Right" Click="Button_Click_2" />
                    <TextBox Text="Card number" Margin="0,5,0,5" />
                    <TextBox Text="Name on card" Margin="0,5,0,5" />

                    <WrapPanel Margin="0,5,0,5">
                        <ComboBox Width="60" Margin="0,0,10,0">
                            <ComboBoxItem Content="MM" />
                        </ComboBox>
                        <ComboBox Width="60" Margin="0,0,10,0">
                            <ComboBoxItem Content="YY" />
                        </ComboBox>
                        <TextBox Text="CVV" Width="60" />
                    </WrapPanel>

                    <Button Content="Save" Background="Black" Foreground="White" HorizontalAlignment="Center" Width="80" Margin="10,20,10,0" Click="Button_Click_1" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Нижняя панель -->
        <TextBlock Text="Contact information" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" />
    </Grid>
</UserControl>
